@section scripts {

    @*<link href="~/Content/CustomStyle.css" rel="stylesheet" />*@
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/Controller/AngularDemoController.js"></script>
}
<div ng-app="studentInfoModule" id="body">
    <div ng-controller="demoCtrl">
        <h3>List of Students</h3>

        <table ng-cloak>
            <thead>
                <tr>
                    <th style="display: none;">ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Address</th>
                    <th>DOB</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="items in productsData">
                    <td hidden="hidden">{{items.id}}</td>
                    <td>{{items.firstName}}</td>
                    <td>{{items.lastName}}</td>
                    <td>{{items.address}}</td>
                    <td>{{items.dob}}</td>
                    <td>
                        <button ng-model="$scope.Product"
                                ng-click="edit(productsData[$index])">
                            Edit
                        </button>
                        <button ng-click="delete($index)">Delete</button>
                    </td>
                </tr>
            </tbody>
            @*<tfoot>
                <tr>
                    <td colspan="6">
                        <hr />
                    </td>
                </tr>
                <tr>
                    <td>Total :</td>
                    <td></td>
                    <td>
                        <label ng-bind="total() |
                    currency:'&#8377;':2"></label>
                    </td>
                    <td></td>
                </tr>
            </tfoot>*@
        </table>
        <br />
        <div style="border-top: solid 2px #282828; width: 430px; height: 10px"> </div>

        <div ng-show="Product.id != '' ">
            <div>
                <h2>Update Student Info</h2>
            </div>
            <div hidden="hidden">
                <label for="id">Id</label>
                <input type="text" data-ng-model="Product.id" />
            </div>
            <div>
                <label for="name">FirstName</label>
                <input type="text" data-ng-model="Product.firstName" />
            </div>

            <div>
                <label for="category">LastName</label>
                <input type="text" data-ng-model="Product.lastName" />
            </div>

            <div>
                <label for="price">Address</label>
                <input type="text" data-ng-model="Product.address" />
            </div>

            <div>
                <label for="price">DOB</label>
                <input type="text" data-ng-model="Product.dob" />
            </div>
            <br />
            <div>
                <button data-ng-click="update()">Update</button>
                <button data-ng-click="cancel()">Cancel</button>
            </div>
        </div>

        <div ng-hide="Product.id != '' ">
            <div>
                <h2>Add Student Info</h2>
            </div>
            <div>
                <label for="name">FirstName</label>
                <input type="text" data-ng-model="Product.firstName" />
            </div>

            <div>
                <label for="category">LastName</label>
                <input type="text" data-ng-model="Product.lastName" />
            </div>

            <div>
                <label for="price">Address</label>
                <input type="text" data-ng-model="Product.address" />
            </div>

            <div>
                <label for="price">DOB</label>
                <input type="text" data-ng-model="Product.dob" />
            </div>
            <br />
            <div>
                <button data-ng-click="save()">Save</button>
                <button data-ng-click="clear()">Clear</button>
            </div>
        </div>
    </div>
</div>